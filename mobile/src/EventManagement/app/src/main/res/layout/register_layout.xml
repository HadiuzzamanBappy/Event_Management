<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/event_management_bg"
    tools:context="com.example.bappy.eventmanagement.OpeningActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/event_management_logo"
        android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawableTint="#fff"
                android:hint="Firstname"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:focusable="true"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/firstname"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/donefirstname"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawableTint="#fff"
                android:hint="Lastname"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:maxLines="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/lastname"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/donelasttname"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="#fff"
                android:hint="Email"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/email"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/doneemail"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:drawableTint="#fff"
                android:hint="City"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:maxLines="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/city"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/donecity"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:drawableTint="#fff"
                android:hint="Phone Number"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="phone"
                android:maxLines="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/phone"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/donephonenumber"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableTint="#fff"
                android:hint="Password"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                android:maxLines="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/password"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/donepassword"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/passwordagain"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableTint="#fff"
                android:hint="Password Again"
                android:textColorHint="#fff"
                android:background="@drawable/edit_text_field"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                android:maxLines="1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/passwordagain"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_done_black_24dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/donepasswordagain"/>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_btn"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/enter"
            android:layout_marginTop="30dp"
            android:id="@+id/signup"
            android:layout_marginBottom="20dp"
            />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:text="@string/need_help"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="18sp"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:id="@+id/needhelp"-->
        <!--/>-->
    </LinearLayout>

</ScrollView>