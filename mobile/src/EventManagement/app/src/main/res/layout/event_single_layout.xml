<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    android:padding="2dp"
    android:background="#424242"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/singleeventlayout"
        >
    <ImageView
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_centerInParent="true"
    android:id="@+id/image"
    android:backgroundTint="#212121"
    android:background="@drawable/event_management_logo"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/signup_btn"
        android:text="Enter"
        android:textSize="15sp"
        android:textColor="#fff"
        android:id="@+id/enterregistration"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:id="@+id/textofevent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="EventName"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textColor="#fff"
        android:id="@+id/eventname"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:id="@+id/Lastdateheader"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Last Date Registration"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_weight="4"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/lastdatetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:text="2017-10-17"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:id="@+id/remainingtimeheader"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Event will Start In"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_weight="4"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/eventStartdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2017-15-12"
            android:textColor="#fff"
            android:textStyle="italic"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            />
    </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>