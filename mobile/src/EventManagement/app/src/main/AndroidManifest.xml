<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bappy.eventmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/event_management_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OpeningActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Login" />
        <activity android:name=".Event_Showing" />
        <activity android:name=".Create_Event" />
        <activity android:name=".Single_Event_Details" />
        <activity android:name=".Event_Registration" />
        <activity android:name=".Reset_Password" />
        <activity android:name=".User_Event_Showing" />
        <activity android:name=".Event_Member_Showing" />
        <activity android:name=".Profile_Showing" />
    </application>

</manifest>